{
  "name": "myria-riptide-integration",
  "version": "1.0.0",
  "description": "Riptide SDK configuration for Myria node integration",
  
  "network": {
    "name": "myria",
    "chainId": 1,
    "rpcUrl": "http://localhost:8545",
    "wsUrl": "ws://localhost:8546",
    "blockTime": 2000,
    "confirmations": 12
  },
  
  "node": {
    "type": "myria",
    "version": "latest",
    "dataDir": "/var/lib/myria",
    "logLevel": "info",
    "maxConnections": 100,
    "timeout": 30000
  },
  
  "monitoring": {
    "enabled": true,
    "interval": 5000,
    "healthCheck": {
      "enabled": true,
      "interval": 30000,
      "timeout": 10000
    },
    "metrics": {
      "enabled": true,
      "port": 9090,
      "path": "/metrics"
    }
  },
  
  "logging": {
    "level": "info",
    "format": "json",
    "output": "file",
    "file": {
      "path": "/var/log/myria/riptide.log",
      "maxSize": "100MB",
      "maxFiles": 10,
      "compress": true
    },
    "console": {
      "enabled": true,
      "colorize": true
    }
  },
  
  "hooks": {
    "enabled": true,
    "path": "/root/hooks.js",
    "timeout": 30000,
    "retries": 3
  },
  
  "events": {
    "newBlock": {
      "enabled": true,
      "filter": {
        "minConfirmations": 1,
        "includeTransactions": true
      }
    },
    "newTransaction": {
      "enabled": true,
      "filter": {
        "minValue": "0",
        "includeReceipt": true
      }
    },
    "pendingTransaction": {
      "enabled": false
    }
  },
  
  "database": {
    "enabled": false,
    "type": "sqlite",
    "path": "/var/lib/myria/riptide.db",
    "backup": {
      "enabled": true,
      "interval": "24h",
      "retention": "7d"
    }
  },
  
  "api": {
    "enabled": true,
    "port": 3000,
    "host": "0.0.0.0",
    "cors": {
      "enabled": true,
      "origins": ["*"]
    },
    "rateLimit": {
      "enabled": true,
      "max": 100,
      "window": "1m"
    }
  },
  
  "security": {
    "enabled": true,
    "authentication": {
      "enabled": false,
      "type": "jwt",
      "secret": "change-this-secret-key"
    },
    "encryption": {
      "enabled": false,
      "algorithm": "aes-256-gcm"
    }
  },
  
  "performance": {
    "maxConcurrentRequests": 50,
    "requestTimeout": 30000,
    "retryAttempts": 3,
    "retryDelay": 1000,
    "cache": {
      "enabled": true,
      "ttl": 300,
      "maxSize": 1000
    }
  },
  
  "development": {
    "enabled": false,
    "debug": false,
    "profiling": false,
    "hotReload": false
  }
}
