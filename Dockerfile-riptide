# Use the systemd-enabled Ubuntu base image
FROM eniocarboni/docker-ubuntu-systemd:jammy

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV NODE_VERSION=22
ENV RIPTIDE_SERVICE_NAME=myria-riptide-service
ENV MYRIA_NODE_SERVICE=myria-node
ENV INTERACTIVE_SETUP=false

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    gnupg \
    lsb-release \
    ca-certificates \
    software-properties-common \
    build-essential \
    python3 \
    python3-pip \
    jq \
    net-tools \
    procps \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js 22
RUN curl -fsSL https://deb.nodesource.com/setup_${NODE_VERSION}.x | bash - \
    && apt-get install -y nodejs

# Install pnpm (required for @deeep-network/riptide)
RUN npm install -g pnpm

# Create application directory
WORKDIR /app

# Copy package files
COPY package-riptide.json package.json
COPY riptide.config.json ./
COPY env.example ./

# Install Node.js dependencies using pnpm
RUN pnpm install

# Install Myria node software
RUN wget https://downloads-builds.myria.com/node/install.sh -O /tmp/install.sh \
    && chmod +x /tmp/install.sh \
    && /tmp/install.sh \
    && rm /tmp/install.sh

# Copy Riptide SDK application files
COPY index.js ./
COPY hooks.js ./

# Create systemd service directory
RUN mkdir -p /etc/systemd/system

# Create Riptide systemd service file
RUN cat > /etc/systemd/system/myria-riptide.service << 'EOF'
[Unit]
Description=Myria Node with Riptide SDK Integration
After=network.target
Wants=myria-node.service

[Service]
Type=simple
User=root
WorkingDirectory=/app
ExecStart=/usr/bin/node index.js
Restart=always
RestartSec=10
Environment=NODE_ENV=production
Environment=PORT=3000

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=myria-riptide

[Install]
WantedBy=multi-user.target
EOF

# Create logs directory
RUN mkdir -p /var/log/myria-node

# Create Myria node directories
RUN mkdir -p /var/lib/myria-node \
    && mkdir -p /var/log/myria-node \
    && mkdir -p /etc/myria-node

# Set proper permissions for Myria node directories
RUN chown -R root:root /var/lib/myria-node \
    && chown -R root:root /var/log/myria-node \
    && chown -R root:root /etc/myria-node \
    && chown -R root:root /app

# Enable the Riptide service
RUN systemctl enable myria-riptide.service

# Expose ports
EXPOSE 3000 8080 8545 30303

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:3000/health || exit 1

# Use systemd as PID 1
ENTRYPOINT ["/lib/systemd/systemd"]
