# Myria Node Configuration
NODE_ENV=production
PORT=3000

# Myria Node Settings
MYRIA_NETWORK=mainnet
MYRIA_RPC_PORT=8545
MYRIA_P2P_PORT=30303
MYRIA_DATA_DIR=/var/lib/myria-node
MYRIA_LOG_DIR=/var/log/myria-node

# Riptide SDK Configuration
RIPTIDE_ENABLED=true
RIPTIDE_HEARTBEAT_INTERVAL=30000
RIPTIDE_STATUS_CHECK_INTERVAL=60000
RIPTIDE_METRICS_ENABLED=true
RIPTIDE_LOG_LEVEL=info

# Service Configuration
SERVICE_NAME=myria-node-service
SERVICE_VERSION=1.0.0
SERVICE_DESCRIPTION=Myria node service with Riptide SDK integration

# Monitoring Configuration
HEALTH_CHECK_PATH=/health
METRICS_PATH=/metrics
STATUS_PATH=/status

# Optional: Database Configuration (if needed)
# DATABASE_URL=
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=myria_node
# DATABASE_USER=myria
# DATABASE_PASSWORD=

# Myria API Keys (Required for lifecycle hooks)
MYRIA_API_KEY=your-myria-api-key-here
MYRIA_NETWORK_KEY=your-myria-network-key-here
MYRIA_WALLET_KEY=your-myria-wallet-key-here

# Optional: External API Keys (if needed)
# EXTERNAL_SERVICE_API_KEY=

# Optional: Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/myria-node/riptide.log

# Optional: Security Configuration
# JWT_SECRET=
# API_RATE_LIMIT=100
# CORS_ORIGIN=*
